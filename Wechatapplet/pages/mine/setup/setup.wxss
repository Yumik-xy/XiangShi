/* pages/mine/setup/setup.wxss */
@import "../../../styles/iconfont.wxss";
page{
  background-color: #F0F0F0;
}

.setup{
  display: flex;
  background-color: #FFFFFF;
  margin-top: 30rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  border-radius: 15px;
  border-style: solid;
  box-shadow:0px 2px 4px 2px #DDDDDD;
  border-width: 0rpx;
}

.setup_title{
  display: flex;
  width: 100%;
  margin-left: 15rpx;
  margin-right: 15rpx;
  flex-direction: column;
}

.title_item{
  display: flex;
  width: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f2f2f2 ;
}

.title_item:nth-last-child(1){
  border-bottom: 0;
}

.item_left{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.item_left view{
  color: var(--themeColor);
  padding-left: 20rpx;
  line-height:36rpx;
  font-size: 36rpx;
}

.item_left text{
  padding-left: 30rpx;
  line-height:36rpx;
  font-size: 36rpx;
}

.item_right{
  display: flex;
  margin-right: 10rpx;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  line-height:30rpx;
  color: #bfbfbf;
}

.exit{
  display: flex;
  background-color: #FFFFFF;
  margin-top: 30rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  border-radius: 15px;
  border-style: solid;
  box-shadow:0px 2px 4px 2px #DDDDDD;
  border-width: 0rpx;
}

.exit_item{
  display: flex;
  width: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.kefu{
  display: flex;
  background-color: #FFFFFF;
  margin-top: 30rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  border-radius: 15px;
  border-style: solid;
  box-shadow:0px 2px 4px 2px #DDDDDD;
  border-width: 0rpx;
}

.kefu_title{
  display: flex;
  width: 100%;
  margin-left: 15rpx;
  margin-right: 15rpx;
  flex-direction: column;
}

.kefu_item{
  display: flex;
  width: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f2f2f2 ;
}

.kefu_item:nth-last-child(1){
  border-bottom: 0;
}

.btn {
  display: inline-block;
  position: absolute;
  opacity: 0;
}
