/* pages/mine/patient/add/add.wxss */
.add {
  height: 100%;
  width: 100%;
}

.con {
  margin: 25rpx 30rpx 50rpx 30rpx;
}

.con view text {
  font-size: 34rpx;
  color: #666666;
}

.con-nr {
  background-color: white;
  display: flex;
  padding-left: 32rpx;
  padding-top: 32rpx;
  padding-bottom: 32rpx;
  align-items:center;
  border-bottom: 1px solid #f2f2f2;
}

.con-nr text {
  flex: 2;
}

.con-nr input {
  float: right;
  font-size: 30rpx;
  padding-right: 32rpx;
  flex: 6;
}

.con-nr textarea {
  float: right;
  font-size: 30rpx;
  padding-right: 32rpx;
  flex: 6;
}

.submit {
  width: 500rpx;
  line-height: 85rpx;
  text-align: center;
  margin: 50rpx auto;
  background-color: var(--themeColor);
  border-radius: 10rpx;
  color: white;
}

.change{
  display: flex;
  flex-direction: row;
}

.delete {
  width: 500rpx;
  line-height: 85rpx;
  text-align: center;
  margin: 50rpx auto;
  opacity: 0.5;
  background-color: var(--themeColor);
  border-radius: 10rpx;
  color: white;
}