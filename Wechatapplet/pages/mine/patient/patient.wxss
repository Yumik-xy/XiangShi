/* pages/mine/patient/patient.wxss */
@import "../../../styles/iconfont.wxss";

.add{
  display: flex;
  background-color: #FFFFFF;
  margin-top: 30rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  border-radius: 15px;
  border-style: solid;
  box-shadow:0px 2px 4px 2px #DDDDDD;
  border-width: 0rpx;
}

.add_title{
  display: flex;
  width: 100%;
  margin-left: 15rpx;
  margin-right: 15rpx;
  flex-direction: column;
}

.add_item{
  display: flex;
  width: 100%;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.item_left text{
  padding-left: 30rpx;
  line-height:42rpx;
  font-size: 42rpx;
}

.add_image{
  display: flex;
  padding-left: 10rpx;
  width: 60rpx;
  height: 60rpx;
  align-items: center;
  color:var(--themeColor);
}