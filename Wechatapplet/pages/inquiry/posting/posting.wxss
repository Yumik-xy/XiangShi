/* pages/inquiry/posting/posting.wxss */
@import "./iconfont.wxss";

.add {
  height: 100%;
  width: 100%;
}

.con {
  margin: 25rpx 30rpx 50rpx 30rpx;
}

.title {
  background-color: white;
  padding: 16rpx;
  margin: 32rpx 16rpx 16rpx 16rpx;
  line-height: 30rpx;
  height: 40rpx;
  align-items:center;
  border-bottom: 1px solid #f2f2f2;
}

.title .title_input {
  background-color: white;
  font-size: 38rpx;
  line-height: 40rpx;
  height: 42rpx;
  width: 100%;
  align-items:center;
}

.supplement {
  background-color: white;
  height: 800rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  margin: 0 16rpx 26rpx 16rpx;
  border-bottom: 1px solid #f2f2f2;
}

.supplement .supplement_input{
  background-color: white;
  font-size: 34rpx;
  line-height: 36rpx;
  width: 626rpx;
  height: 800rpx;
  padding-top: 20rpx;
}

.choosedisease{
  background-color: white;
  font-size: 34rpx;
  line-height: 36rpx;
  height: 34rpx;
  margin-left: 46rpx;
  margin-right: 46rpx;
  padding-left: 16rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #f2f2f2;
}

.upLoad{
  background-color: white;
  padding-left: 30rpx;
  padding-right: 15rpx;
  padding-bottom: 15rpx;
  padding-top: 30rpx;
  margin-bottom: 50rpx;
  height: 300rpx;
  border-bottom: 1px solid #e6e6e6;
}

.pf-type{
  color: #666666;
  padding-left: 30rpx;
  font-size: 34rpx;
  line-height: 34rpx;
  height:36rpx;
}

.q-image-wrap{
  margin-top: 20rpx;
  width: 200rpx;
   height: 200rpx;
  border: 3px solid #f0f0f0;
  float: left;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
  border-radius: 30rpx;
}

.q-image-remover{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  background: var(--themeColor);
  position: absolute;
  top:-50rpx;
  right:-50rpx;
}

.q-image-remover image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left:10rpx;
  bottom:10rpx;
  color:#fff;
}

.q-image{
  width:200rpx ;
  height: 200rpx;
}

.uploadImgBtn{
  margin-top: 20rpx;
  display: flex;
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  border: 6rpx solid #f0f0f0;
  float: left;
  align-items: center;
  justify-content: center;
  background-color: #eeeeee;
  border-radius: 30rpx;
  border: 6rpx dashed #e6e6e6;
}

.uploadImgBtn image{
  width: 80rpx;
  height: 80rpx;
}

.submit {
  margin-top: 20rpx;
  position: fixed;
  bottom: 0;
  font-size: 40rpx;
  /* line-height: 40rpx; */
  text-align: center;
  height: 85rpx;
  width: 100%;
  color: white;
  background-color:var(--themeColor);
  border-radius: 0;
  font-weight: 500;
}
