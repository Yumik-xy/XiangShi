/* pages/inquiry/inquiry.wxss */
.search {
  position: fixed;
  height: 65rpx;
  width: 100%;
  background-color: var(--themeColor);
  padding: 12.5rpx 0 12.5rpx 15rpx;
  display: flex;
  flex-direction: row;
}
.search-left {
  background-color: #ffffff;
  flex: 8;
  border-radius: 20rpx;
  flex-direction: row;
  display: flex;
}
.search-left image {
  height: 35rpx;
  width: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.search-left navigator {
  display: flex;
  width: 100%;
  height: 65rpx;
  font-size: 30rpx;
  text-align: left;
  align-items: center;
}
.search-right {
  flex: 1;
}
.search-right image {
  height: 45rpx;
  width: 45rpx;
  padding: 10rpx;
}
.search-placeholder {
  color: #bfbfbf;
  font-size: 26rpx;
  text-align: left;
}

.inquirys{
  padding-top: 65rpx;
}

.inquiry{
  /* display: flex; */
  height: auto;
  margin: 40rpx;
  padding: 10rpx 20rpx;
  border-style: solid;
  box-shadow: 0rpx 2rpx 4rpx 2rpx #DDDDDD;
  border-width: 0rpx;
}

.photo{
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}

.classify{
  font-weight: bold;
  font-size: 34rpx;
}

.message{
  padding-top: 20rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #3d3d3d;
}

.message .picture{
  padding-top: 20rpx;
  width: 200rpx;
  height: 200rpx;
}

.time{
  padding-left: 20rpx;
}

.title-left{
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.title-right{
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

.title-right .NT{
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  color: #3d3d3d;
}

.other{
  padding: 10rpx 0rpx;
  display: flex;
  justify-content: space-around;
}

.otimg{
  width: 32rpx;
  height: 32rpx;
}

.post{
  position: fixed;
  right: 30rpx;
  bottom: 50rpx;
  width: 100rpx;
  height: 100rpx;
  z-index: 200;
  border-radius: 50rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-style: solid;
  box-shadow: 0rpx 4rpx 8rpx 4rpx #DDDDDD;
  border-width: 0rpx;
}

.post .postimg{
  width: 50rpx;
  height: 50rpx;
  transform: translate(-10%,5%);
}

.post .btn{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}