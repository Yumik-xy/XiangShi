/* pages/inquiry/detail/detail.wxss */

.inquiry {
  /* display: flex; */
  height: auto;
  margin: 30rpx;
  padding: 10rpx 20rpx;
  border-style: solid;
  /* box-shadow: 0rpx 2rpx 4rpx 2rpx #DDDDDD; */
  border-width: 0rpx;
}

.photo {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}

.title {
  font-weight: bold;
  font-size: 42rpx;
  margin-bottom: 20rpx;
}

.message {
  padding-top: 20rpx;
  /* text-align: center; */
}

.classify {
  font-size: 36rpx;
  line-height: 44rpx;
  color: var(--themeColor);
}

.content {
  font-size: 36rpx;
  line-height: 48rpx;
  color: #3d3d3d;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
}

.picmessage{
  display: flex;
  flex-direction: column;
}

.picmessage .picture {
  padding-top: 20rpx;
  width: 100%;
  height: 120rpx;
  margin-right: 1%;
}

.title-left {
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.title-right {
  display: flex;
  flex-direction: column;
  align-content:center;
  margin-left: 40rpx;
  color: #3d3d3d;
}

.title-right .name{
  font-size: 34rpx;
}

.title-right .time{
  font-size: 30rpx;
}

.other {
  margin-top: 20rpx;
  padding: 10rpx 0rpx;
  display: flex;
  justify-content: space-around;
}

.otimg {
  width: 32rpx;
  height: 32rpx;
}