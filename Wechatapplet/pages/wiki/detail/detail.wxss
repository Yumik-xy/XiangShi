page{
  width: 100%;
  height: 100%;
}

.scr_left{
  width:20%;
  height: 100vh;
  text-align: center;
  background-color: #FAFAFA;
  border-right:2rpx solid #F2F2F2;
}

.sc_left_item{
  height: 100rpx;
  line-height: 100rpx;
  font-size:30rpx;
  border-bottom: 2rpx solid #ebebeb;
  background-color:#FAFAFA;
}

.scr_right{
  width: 75%;
  height: 100vh;
  position: absolute;
  right: 0px;
  top: 0px;
  margin: 0 10rpx 0 10rpx;
  box-sizing: border-box;
}

.sc_right_item{
  margin-bottom: 60rpx;
} 

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.scr_left .sc_left_item.active{
  position:relative;
  background:#FFF;
  color:var(--themeColor);
  font-size:35rpx;
  font-weight: bold;
}

.scr_left .sc_left_item.active::before{
  display: inline-block;
  width:6rpx;
  height:60rpx;
  background:var(--themeColor);
  content:'';
  position:absolute;
  top:20rpx;
  left:0;
}

