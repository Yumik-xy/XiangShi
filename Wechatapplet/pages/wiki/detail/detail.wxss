page{
  width: 100%;
  height: 100%;
}

.scr_left{
  width:20%;
  height: 100vh;
  text-align: center;
  background-color: #FAFAFA;
  border-right:2rpx solid #F2F2F2;
}

.sc_left_item{
  height: 100rpx;
  line-height: 100rpx;
  font-size:28rpx;
  border-bottom: 2rpx solid #ebebeb;
  background-color:#FAFAFA;
}

.scr_right{
  width: 75%;
  height: 100vh;
  position: absolute;
  right: 0px;
  top: 0px;
  margin: 0 20rpx 0 20rpx;
  box-sizing: border-box;
}

/* .sc_right_item{
  line-height: 200rpx;
  font-size:34rpx;
  margin-top: 8rpx;
} */

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.scr_left .sc_left_item.active{
  position:relative;
  background:#FFF;
  color:var(--themeColor);
  font-size:35rpx;
  font-weight: bold;
}

.scr_left .sc_left_item.active::before{
  display: inline-block;
  width:6rpx;
  height:60rpx;
  background:var(--themeColor);
  content:'';
  position:absolute;
  top:20rpx;
  left:0;
}

/*文本*/

.rich-p{
  font-size: 200rpx;
}
