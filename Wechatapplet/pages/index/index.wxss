/**index.wxss**/
.swiper_imgs swiper {
  width: 100%;
  height: 330rpx;
  border-radius: 20rpx;
  margin: 15rpx;
  box-shadow: 0 0 10rpx #000000;
  width: auto;
}
.swiper_imgs swiper image {
  border-radius: 20rpx;
  width: 100%;
  height: 330rpx;
}
.classfyHead {
  display: flex;
  text-align: left;
  flex-direction: row;
  width: 100%;
  margin-left: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.classfyHead image {
  width: 8%;
  height: auto;
}
.classfyHead .left_text {
  width: 78%;
  display: flex;
  margin-left: 10rpx;
  text-align: left;
  align-items: center;
  color: #000000;
  font-family: Tahoma, Geneva, sans-serif;
  font-size: 40rpx;
}
.classfyHead .right_text {
  display: flex;
  text-align: right;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  color: #bfbfbf;
}
.classfy {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 8rpx #000000;
}
.classfy navigator {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 26rpx;
  font-size: 30rpx;
  border-radius: 30rpx;
}
.classfy navigator image {
  margin-bottom: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.swiper-notice {
  display: flex;
  flex-direction: row;
  width: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding-left: 1%;
  border-radius: 12rpx;
  box-shadow: 0 0 6rpx #000000;
  height: 60rpx;
}
.swiper-notice image {
  display: flex;
  width: 10%;
  height: auto;
}
.swiper-notice swiper {
  width: 100%;
  height: auto;
  margin-left: 20rpx;
}
.swiper-notice swiper swiper-item {
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.contentHead1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.contentHead1 image {
  width: 10%;
  height: auto;
}
.contentHead2 {
  display: flex;
  margin-left: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.contentHead2 .tab {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
  margin-right: 10rpx;
  float: left;
  width: auto;
  text-align: center;
  font-size: 28rpx;
  color: #bfbfbf;
}
.contentHead2 .tabBorer {
  border-bottom: 8rpx solid var(--themeColor);
  color: #000000;
  font-size: 40rpx;
}
.contents {
  background-color: #ffffff;
  margin-bottom: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 0 6rpx black;
  height: auto;
  width: auto;
}
.contents swiper {
  height: 100%;
}
.contents swiper swiper-item {
  height: 100%;
}

.contents swiper swiper-item view {
  display: flex;
  width: auto;
  height: 25%;
  border-bottom-style: solid;
  border-color: #bfbfbf;
  border-width: 6rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding-bottom: 10rpx;
  align-items: center;
}
.contents swiper swiper-item view image {
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 30%;
  height: 100%;
  box-shadow: 0 0 6rpx #000000;
}
.contents swiper swiper-item view .title_text {
  height: 100%;
  width: 65%;
  flex-direction: column;
}
.contents swiper swiper-item view .title_text .title {
  font-size: 34rpx;
  color: #000000;
}
.contents swiper swiper-item view .title_text .txt {
  height: auto;
  width: auto;
  display: flex;
  overflow: hidden;
  font-size: 26rpx;
  color: #bfbfbf;
}
.contents view:nth-last-child(1) {
  border-bottom: 0;
}
.tips {
  border-style: solid;
  border-width: medium;
}
