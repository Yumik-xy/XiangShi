/**index.wxss**/
.swiper_imgs swiper {
  width: 100%;
  height: 330rpx;
  border-radius: 20rpx;
  margin: 15rpx;
  box-shadow: 0 0 px #000000;
  width: auto;
}
.swiper_imgs swiper image {
  border-radius: 20rpx;
  width: 100%;
  height: 330rpx;
}
.classfyHead {
  display: flex;
  text-align: left;
  flex-direction: row;
  width: 100%;
  margin-left: 20rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}
.classfyHead image {
  width: 8%;
  height: auto;
}
.classfyHead .left_text {
  width: 78%;
  display: flex;
  margin-left: 5px;
  text-align: left;
  align-items: center;
  color: #000000;
  font-family: Tahoma, Geneva, sans-serif;
  font-size: large;
}
.classfyHead .right_text {
  display: flex;
  text-align: right;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: #bfbfbf;
}
.classfy {
  display: flex;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 2px #000000;
}
.classfy navigator {
  flex: 1;
  padding: 26rpx;
  text-align: center;
  font-size: small;
}
.classfy navigator image {
  padding-left: 15rpx;
  padding-right: 15rpx;
  width: 70%;
}
.swiper-notice {
  display: flex;
  flex-direction: row;
  width: auto;
  margin-left: 20rpx;
  margin-right: 10rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  padding-left: 1%;
  border-radius: 12rpx;
  box-shadow: 0 0 2px #000000;
  height: 60rpx;
}
.swiper-notice image {
  display: flex;
  width: 10%;
  height: auto;
}
.swiper-notice swiper {
  width: 100%;
  height: auto;
  margin-left: 10px;
}
.swiper-notice swiper swiper-item {
  width: 100%;
  display: flex;
  align-items: center;
  font-size: small;
}
.contentHead1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 15px;
  font-size: large;
}
.contentHead1 image {
  width: 10%;
  height: auto;
}
.contentHead2 {
  display: flex;
  margin-left: 10px;
  margin-top: 5px;
}
.contentHead2 .tab {
  display: flex;
  align-items: center;
  margin-left: 5px;
  margin-right: 5px;
  float: left;
  width: auto;
  text-align: center;
  font-size: 14px;
  color: #bfbfbf;
}
.contentHead2 .tabBorer {
  border-bottom: 2px solid #f00;
  color: #000000;
  font-size: 20px;
}
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
.contents {
  background-color: #ffffff;
  margin-bottom: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 0 2px black;
  height: 800rpx;
  width: auto;
}
.contents swiper {
  height: 100%;
}
.contents swiper swiper-item {
  height: 100%;
}
.contents swiper swiper-item view {
  display: flex;
  width: auto;
  height: 25%;
  border-bottom-style: solid;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  align-items: center;
}
.contents swiper swiper-item view image {
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 30%;
  height: 100%;
  box-shadow: 0 0 2px #000000;
}
.contents view:nth-last-child(1) {
  border-bottom: 0;
}
.tips {
  border-style: solid;
  border-width: medium;
}
