/**index.wxss**/
.swiper_imgs swiper {
  width: 100%;
  height: 330rpx;
  border-radius: 20rpx;
  margin: 15rpx;
  box-shadow: 0 0 px #000000;
  width: auto;
}
.swiper_imgs swiper image {
  border-radius: 20rpx;
  width: 100%;
  height: 330rpx;
}
.classfyHead {
  display: flex;
  text-align: left;
  flex-direction: row;
  width: 100%;
  margin-left: 20rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}
.classfyHead image {
  width: 8%;
  height: auto;
}
.classfyHead .left_text {
  width: 78%;
  display: flex;
  margin-left: 5px;
  text-align: left;
  align-items: center;
  color: #000000;
  font-family: Tahoma, Geneva, sans-serif;
  font-size: 16px;
}
.classfyHead .right_text {
  display: flex;
  text-align: right;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: #bfbfbf;
}
.classfy {
  display: flex;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 2px #000000;
}
.classfy navigator {
  flex: 1;
  padding: 26rpx;
  text-align: center;
  font-size: small;
}
.classfy navigator image {
  padding-left: 15rpx;
  padding-right: 15rpx;
  width: 70%;
}
.swiper-notice {
  display: flex;
  flex-direction: row;
  width: auto;
  margin-left: 20rpx;
  margin-right: 10rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  padding-left: 1%;
  border-radius: 12rpx;
  box-shadow: 0 0 2px #000000;
  height: 60rpx;
}
.swiper-notice image {
  display: flex;
  width: 10%;
  height: auto;
}
.swiper-notice swiper {
  width: 100%;
  height: auto;
  margin-left: 10px;
}
.swiper-notice swiper swiper-item {
  width: 100%;
  display: flex;
  align-items: center;
  font-size: small;
}
.contentHead {
  display: flex;
  text-align: left;
  flex-direction: row;
  width: 100%;
  margin-left: 20rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}
.contentHead image {
  width: 10%;
  height: auto;
}
.contentHead .left_text {
  width: 78%;
  display: flex;
  text-align: left;
  align-items: center;
  color: #000000;
  font-family: Tahoma, Geneva, sans-serif;
  font-size: medium;
}
.contentHead .right_text {
  display: flex;
  text-align: right;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: #bfbfbf;
}
.contents {
  background-color: #ffffff;
  margin-bottom: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 3px black;
}
.contents view {
  margin-left: 5%;
  margin-right: 5%;
  padding-top: 2%;
  padding-bottom: 2%;
  border-bottom-style: dotted;
  border-bottom-color: var(--themeColor);
  font-family: "Comic Sans MS", cursive, sans-serif;
  font-size: large;
}
.contents view:nth-last-child(1) {
  border-bottom: 0;
}
.tips {
  border-style: solid;
  border-width: medium;
}
