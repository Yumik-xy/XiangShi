/**index.wxss**/
.swiper_imgs swiper {
  width: 100%;
  height: 330rpx;
}
.swiper_imgs swiper image {
  width: 100%;
  height: 330rpx;
}
.classfy {
  display: flex;
  margin-top: 15rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 2px var(--themeColor);
}
.classfy navigator {
  flex: 1;
  padding: 26rpx;
  text-align: center;
  font-size: small;
}
.classfy navigator image {
  padding-left: 15rpx;
  padding-right: 15rpx;
  width: 70%;
}
.swiper-notice {
  display: flex;
  flex-direction: row;
  width: auto;
  margin-top: 5%;
  margin-left: 5%;
  margin-right: 5%;
  padding-left: 1%;
  border-style: solid;
  border-color: var(--themeColor);
  border-top-left-radius: 35rpx;
  border-bottom-left-radius: 35rpx;
  border-top-right-radius: 35rpx;
  border-bottom-right-radius: 35rpx;
  height: 25px;
}
.swiper-notice view {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 45px;
  color: var(--themeColor);
  font-size: 16px;
}
.swiper-notice swiper {
  width: 100%;
  height: auto;
  margin-left: 5px;
}
.swiper-notice swiper swiper-item {
  display: flex;
  align-items: center;
  font-size: small;
}
.contentHead {
  display: flex;
  text-align: left;
  flex-direction: row;
  width: 100%;
  margin-left: 20rpx;
  margin-top: 25rpx;
}
.contentHead image {
  width: 10%;
  height: auto;
}
.contentHead .left_text {
  width: 75%;
  display: flex;
  text-align: left;
  align-items: center;
  color: var(--themeColor);
  font-family: Tahoma, Geneva, sans-serif;
  font-size: medium;
}
.contentHead .right_text {
  display: flex;
  text-align: right;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: #bfbfbf;
}
.tips {
  border-style: solid;
  border-width: medium;
}
