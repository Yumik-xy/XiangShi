/* pages/index/calendar/calendar.wxss */
.box {
  display: flex;
  flex-wrap: wrap;
  margin: auto;
}
.box .dateBox {
  width: 100%;
  height: auto;
  line-height: 20rpx;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  font-size: 40rpx;
  font-weight: bold;
}
.box > view {
  height: auto;
  text-align: center;
  font-size: 34rpx;
}
.box .week {
  width: 100%;
  height: auto;
  display: flex;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  background-color: #eee1e1;
  border-radius: 25rpx;
  font-size: 36rpx;
}
.box .calendar {
  width: auto;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  box-shadow: 0 0 6rpx #000000;
  margin-top: 10rpx;
  border-radius: 10rpx;
}
.box .calendar view {
  width: auto;
}
.dateOn {
  border-radius: 50%;
  background-color: var(--themeColor);
  color: #fff;
}
.tipsHead {
  display: flex;
  flex-direction: row;
  margin: 20rpx 10rpx 0rpx 40rpx;
  align-items: center;
  font-size: 38rpx;
}
.tipsHead image {
  width: 10%;
  margin-right: 10rpx;
}
.tips {
  flex-direction: column;
  align-items: center;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-top-style: solid;
  border-top-color: #bfbfbf;
  border-top-width: 5rpx;
}
.tips .Schedule {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  border-bottom-style: solid;
  border-bottom-color: #dbd8d8;
  border-bottom-width: 1rpx;
}
.tips .Schedule .time {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100rpx;
  height: auto;
}
.tips .Schedule .tip {
  display: flex;
  border-left-color: var(--themeColor);
  border-left-width: 4rpx;
  border-left-style: solid;
  align-items: center;
  font-size: 28rpx;
}
.tips .Schedule .tip checkbox {
  display: flex;
  align-items: center;
  margin: 5rpx;
}
.tips .newSchedule {
  display: flex;
  align-items: center;
  height: 100rpx;
  text-align: center;
  border-bottom-style: solid;
  border-bottom-color: #dbd8d8;
  border-bottom-width: 2rpx;
}
.tips .newSchedule text {
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--themeColor);
}
