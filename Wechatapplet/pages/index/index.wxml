<!-- index.wxml -->
<view>
  <!-- 搜索框 开始 -->
  <SearchInput></SearchInput>
  <!-- 搜索框 结束 -->
  <!-- 轮播框 开始 -->
  <!-- 445*300
    499*327
    500*306 -->
  <swiper class="swiper" autoplay="{{true}}" interval="3000" circular="{{true}}" indicator-dots="{{true}}" indicator-active-color="blue">
    <swiper-item wx:for="{{swiper_imgs}}" wx:key="id">
      <image mode="scaleToFill" src="{{item.item_img_url}}" />
    </swiper-item>
  </swiper>
  <!-- 轮播框 结束 -->
  <!-- 分类导航 开始 -->
  <view class="classfy">
    <navigator wx:key="id" open-type="reLaunch" url="{{item.turn_url}}" wx:for="{{classfy}}">
      <image mode="widthFix" src="{{item.item_img_url}}" />
      <text>{{item.item_name}}</text>
    </navigator>
  </view>
  <!-- 分类导航 结束 -->
  <!-- 资讯栏 开始 -->
  <HomeContent></HomeContent>
  <!-- 资讯栏 结束 -->
</view>