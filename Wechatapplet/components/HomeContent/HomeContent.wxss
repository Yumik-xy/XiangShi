/* components/HomeContent/HomeContent.wxss */
.contents {
  display: flex;
  background-color: #ffffff;
  margin-bottom: auto;
  margin-left: 15px;
  margin-right: 15px;
  border-radius: 10px;
  border-style: solid;
  border-width: 2px;
  width: auto;
}
.contents view {
  margin-left: 10px;
  margin-right: 10px;
  border-bottom-style: dotted;
  border-bottom-color: var(--themeColor);
}
.contents view text {
  font-family: "Comic Sans MS", cursive, sans-serif;
  font-size: large;
}
