/* components/Tabs/Tabs.wxss */
@import "../../styles/iconfont.wxss";
.tabs{
  display: flex;
  background-color: #FFFFFF;
  margin-left: 40rpx;
  margin-right: 40rpx;
  border-radius: 15px;
  border-style: solid;
  box-shadow:0px 2px 4px 2px #DDDDDD;
  border-width: 0rpx;
}

.tabs_title{
  display: flex;
  width: 100%;
  margin-left: 15rpx;
  margin-right: 15rpx;
  flex-direction: column;
}

.title_item{
  display: flex;
  width: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #bfbfbf ;
}

.title_item:nth-last-child(1){
  border-bottom: 0;
}

.item_left{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.item_left view{
  color: var(--themeColor);
  padding-left: 20rpx;
  line-height:36rpx;
  font-size: 36rpx;
}

.item_left text{
  padding-left: 30rpx;
  line-height:36rpx;
  font-size: 36rpx;
}

.item_right{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  line-height:30rpx;
  color: #bfbfbf;
}